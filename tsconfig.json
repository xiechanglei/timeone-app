{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests"],
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
